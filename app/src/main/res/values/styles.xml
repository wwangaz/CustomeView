<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="SlidingMenuLayout">
        <attr name="rightPadding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="BaseGridLayout">
        <attr name="column_count" format="integer"/>
        <attr name="horizontal_space" format="dimension"/>
        <attr name="vertical_space" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ListRecyclerView">
        <attr name="recycler_divider" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CircleLoadingView">
        <attr name="circleStartColor" format="color"/>
        <attr name="circleEndColor" format="color"/>
        <attr name="circleArcSpacing" format="integer|reference"/>
        <attr name="circleArcWidth" format="integer|reference"/>
        <attr name="circleArcRadian" format="integer|reference"/>
    </declare-styleable>
</resources>
